extends layout

block content

  while message = flash.shift()
    div(class='alert alert-success')
      p= message.message
      
  
  div.container
    h2 Select a function:
    div(class='row')
      div(class='col-md-6')
        h3 Invite from group
        form(action='/invitegroup' method='post' class="form-inline")
          div.form-group
            input(type='text' name='id' class="form-control" placeholder="Steam group name in URL" style="margin-right: 7px")
            button(type='submit' class="btn btn-default") Submit

      div(class='col-md-6')
        h3 Invite from profile
        form(action='/invitefriends' method='post' class="form-inline")
          div.form-group
              input(type="text" name="id" class="form-control" placeholder="Profile name as in URL" style="margin-right: 7px")
              button(type="submit" class="btn btn-default") Submit
            
    div(class='row' style='padding-top:300px')
      div(class="col-md-4 col-md-offset-8")
        form(action='/logoff' method='post')
          button(type='submit' class='btn btn-primary') Sign out
